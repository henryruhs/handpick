{
	"compilerOptions":
	{
		"outDir": "build",
		"target": "es2015",
		"module": "esnext",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"resolveJsonModule": true
	},
	"include":
	[
		"src",
		"src/assets/option.json",
		"src/assets/wording.json",
		"package.json"
	],
	"exclude":
	[
		"node_modules"
	]
}
